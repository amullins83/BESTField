<Window x:Class="BEST2014.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Best 2014" Height="350" Width="525">
    <Window.Resources>
        <Image Source="Resources/save_16xLG.png" x:Key="saveIcon"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="265*"/>
            <RowDefinition Height="32*"/>
        </Grid.RowDefinitions>
        <Menu HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="517">
            <MenuItem Header="_File">
                <MenuItem Header="_Save" Icon="{StaticResource saveIcon}"/>
            </MenuItem>
            <MenuItem Header="_Panic">
                <MenuItem Header="_Austin Did It"/>
            </MenuItem>
        </Menu>
        <StatusBar HorizontalAlignment="Stretch"
                   Grid.Row="2"
                   VerticalAlignment="Stretch">
            <TextBlock Name="message" Text="{Binding Message}" Width="200"
                       Margin="10,0,0,0"/>
        </StatusBar>
    </Grid>
</Window>
